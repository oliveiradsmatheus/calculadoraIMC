<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/ubuntu"
            android:text="Calculadora IMC"
            android:textColor="@color/texto_claro"
            android:textSize="32sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:cardCornerRadius="24dp"
            app:cardElevation="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fundo_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Informe o seu nome"
                        android:textAlignment="center"
                        android:textColor="@color/texto" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:text="Sexo"
                    android:textColor="@color/texto"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rgSexo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbMasc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Masculino"
                        android:textColor="@color/texto" />

                    <RadioButton
                        android:id="@+id/rbFem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu"
                        android:text="Feminino"
                        android:textColor="@color/texto" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:text="Peso (kg)"
                    android:textColor="@color/texto"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/sbPeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1500"
                    android:min="100"
                    android:progress="500"
                    android:thumb="@android:drawable/btn_radio"
                    android:thumbTint="@color/verde" />

                <TextView
                    android:id="@+id/tvPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="50"
                    android:textColor="@color/texto"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:text="Altura (m)"
                    android:textColor="@color/texto"
                    android:textSize="20sp" />

                <SeekBar
                    android:id="@+id/sbAltura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:min="50"
                    android:progress="150"
                    android:thumb="@android:drawable/btn_radio"
                    android:thumbTint="@color/verde" />

                <TextView
                    android:id="@+id/tvAltura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="1.50"
                    android:textColor="@color/texto"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btCalcular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/ubuntu"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="Calcular"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>